<?xml version="1.0" encoding="utf-8"?>
<!-- 自定义infoWindow -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_220dp"
    android:layout_height="@dimen/dimen_56dp"
    android:background="@android:color/transparent" >
      <RelativeLayout 
          android:layout_width="@dimen/dimen_240dp"
          android:layout_height="@dimen/dimen_56dp"
          android:background="@drawable/range_select_bg"
          >
          <RelativeLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_6dp"
              >
          <ImageView 
              android:id="@+id/range_select_ico"
              android:layout_width="@dimen/dimen_24dp"
              android:layout_height="@dimen/dimen_24dp"
              android:src="@drawable/range_select_ico"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/dimen_3dp"
              />
          <TextView 
               android:id="@+id/text_safety_range"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_centerVertical="true"
               android:text="@string/safearea_300"
               android:textColor="#E8E8E8"
               android:textSize="@dimen/dimen_16dp"
              />
          <ImageView 
              android:id="@+id/drow_arrows"
              android:layout_width="@dimen/dimen_14dp"
              android:layout_height="@dimen/dimen_14dp"
              android:src="@drawable/drow_arrows"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="@dimen/dimen_3dp"
              />
          </RelativeLayout>
      </RelativeLayout>

</RelativeLayout>
