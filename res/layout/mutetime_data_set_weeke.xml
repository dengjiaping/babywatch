                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:button="@drawable/checkbox_btn_img"
                android:gravity="center_vertical"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>