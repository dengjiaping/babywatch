<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3" >

    <LinearLayout
        android:id="@+id/rel_left"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
	        android:layout_width="1dp"
	        android:layout_height="4dp"
	        android:background="#b2b2b2"
	        android:contentDescription="竖线" />
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/dimen_60dp"
		    android:background="@drawable/time_bg"
		    android:gravity="center">
		    <TextView
	            android:id="@+id/text_month"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="3月"
	            android:textColor="#FFFFFF"
	            android:textSize="@dimen/dimen_20sp" />
		</LinearLayout>
	    <ImageView
	        android:layout_width="1dp"
	        android:layout_height="0dp"
	        android:layout_weight="0.9"
	        android:background="#b2b2b2"
	        android:contentDescription="竖线" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_toRightOf="@id/rel_left"
        android:background="@drawable/address_background" 
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_sos_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_sos_address"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:text="2015-03-16"
            android:textColor="#b2b2b2"
            android:paddingLeft="8dp"
        	android:paddingRight="8dp"
            android:textSize="@dimen/dimen_10sp" />

        <TextView
            android:id="@+id/text_sos_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="广东省广州市天河区体育中心100号广州市天河区体育中心100号广东省广州市天河区体育中心100号广州市天河区体育中心100号广东省广州市天河区体育中心100号广州市天河区体育中心100号广东省广州市天河区体育中心100号广州市天河区体育中心100号广东省广州市天河区体育中心100号广州市天河区体育中心100号广东省广州市天河区体育中心100号广州市天河区体育中心100号广东省广州市天河区体育中心100号广州市天河区体育中心100号广东省广州市天河区体育中心100号广州市天河区体育中心100号广东省广州市天河区体育中心100号广州市天河区体育中心100号"
            android:textColor="#C4C4C4"
            android:lineSpacingExtra="2dp"
            android:paddingTop="2dp"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

</LinearLayout>

