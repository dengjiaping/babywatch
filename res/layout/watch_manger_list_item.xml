<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_baby_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_95dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/rel_baby_head_picture"
            android:layout_width="@dimen/dimen_95dp"
            android:layout_height="@dimen/dimen_95dp"
            android:background="#ffffff"
            android:gravity="center" >

            <ImageView
                android:id="@+id/rel_babyhead"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="@dimen/dimen_90dp"
                android:layout_height="@dimen/dimen_90dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/babyheadpiture" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_95dp"
            android:layout_marginLeft="@dimen/dimen_100dp"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingTop="@dimen/dimen_10dp"
                android:text=""
                android:textColor="#525252"
                android:textSize="@dimen/dimen_20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:text="@string/serialnum"
                    android:textColor="#c2c2c2"
                    android:textSize="@dimen/dimen_13dp" />

                <TextView
                    android:id="@+id/textSerialNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:text="123456"
                    android:textColor="#c2c2c2"
                    android:textSize="@dimen/dimen_13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:text="@string/addtime"
                    android:textColor="#c2c2c2"
                    android:textSize="@dimen/dimen_13dp" />

                <TextView
                    android:id="@+id/textBindingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:text="2015-2-16"
                    android:textColor="#c2c2c2"
                    android:textSize="@dimen/dimen_13dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnJianTou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_4dp"
            android:background="#ffffff"
            android:src="@drawable/jiantou" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#f0f0f0" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_49dp"
        android:background="#ffffff" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slience"
            android:textColor="#525252"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_14dp"
            />
        <CheckBox
            android:id="@+id/btn_mutetime"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:background="#ffffff"
            android:button="@drawable/mutetime_manage_checkbox_btn_img" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#f0f0f0" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_locationinterval"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_49dp"
        android:background="#ffffff" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locatedinterval"
            android:textColor="#525252"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_14dp"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dimen_4dp"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="#f0f0f0" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_whitelist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_49dp"
        android:background="#ffffff" >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watchnummamage"
            android:textColor="#525252"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_14dp"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dimen_4dp"/>
    </RelativeLayout>
</LinearLayout>